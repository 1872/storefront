<h1>Edit Taco</h1>

<% if @taco.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@taco.errors.count, "error") %> prohibited this taco from being saved:</h2>
 
    <ul>
    <% @taco.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag "/products/#{@taco.id}", method: :patch do %>

<div class="form-group">
  <%= label_tag :name %>
  <%= text_field_tag :name, @taco.name, class: "form-control" %>
</div>
<div class="form-group">
  <%= label_tag :price %>
  <%= text_field_tag :price, @taco.price, class: "form-control" %>
</div>
<div class="form-group">
  <%= label_tag :description %>
  <%= text_field_tag :description, @taco.description, class: "form-control" %>
</div>
<%= submit_tag "Update Taco", class: "btn btn-default" %>

<% end %>